<h1>Edit user</h1>
<%= form_tag '/edit' do %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <%= hidden_field_tag 'id', @info.id %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= text_field_tag 'name',  @info.name, class: 'form-control', id: 'user_name' %>
  </div>

  <div class="form-group">
    <label for="user_lastname">Lastname</label>
    <%= text_field_tag 'lastname',  @info.lastname, class: 'form-control', id: 'user_lastname' %>
  </div>

  <div class="form-group">
    <label for="user_message">Message</label>
    <%= text_area_tag 'message',  @info.message, class: 'form-control', id: 'user_message' %>
  </div>

  <div>
    <%= submit_tag 'update', class: 'btn btn-primary', data: { disable_with: 'Saving...' } %>
  </div>
<% end %>
