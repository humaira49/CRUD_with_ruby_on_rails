<!-- ___________________________________in__table____________________-->
<h1>Users</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Message</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @info.each do |info| %>
      <tr>
        <!--<td><%= info.id %></td>-->
        <td><%= info.name %></td>
        <td><%= info.lastname %></td>
        <td><%= info.message %></td>
        <td>
        <%= link_to 'Edit ğŸ–‹', welcome_path(info)%>
         </td>
         <td>
        <%= link_to '  Delete ğŸ—‘', delete_welcome_path(info), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      </tr>
    <% end %>

  </tbody>
</table>
<hr>
<!--__________________________________________inserting data___________________-->
<h1>Add new user</h1>
<%= form_tag '/users' do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>


  <div class="form-group">
    <label for="user_name">Name</label>
    <%= text_field_tag 'name', nil, class: 'form-control', id: 'user_name' %>
  </div>

  <div class="form-group">
    <label for="user_lastname">Lastname</label>
    <%= text_field_tag 'lastname', nil, class: 'form-control', id: 'user_lastname' %>
  </div>

  <div class="form-group">
    <label for="user_message">Message</label>
    <%= text_area_tag 'message', nil, class: 'form-control', id: 'user_message' %>
  </div>

  <div>
    <%= submit_tag 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...' } %>
  </div>
<% end %>
